<!DOCTYPE html>
<html>
<head>
    <title>Task</title>
    <%- include('partials/navbar')%>
</head>
<body>
    <h1><%= temp.name %></h1>
        
    <form action="/users/<%=temp.id%>/seeTasks" method="post">
        <label>Add Task</label><br/>
        <select name="task" >
            <option selected disabled>---SELECT---</option>
            <% for(let i = 0; i < tempTask.length; i++){ %>
                <option value="<%= tempTask[i].id %>"><%= tempTask[i].name %></option>
            <% } %>
        </select><br/>
        <button type="submit">Add</button><a href="/users"> Cancel </a>
    </form>
    <table border=1>
        <tr>
            <th>Name</th>
            <th>Status</th>
        </tr>
    <% for(let i = 0; i < temp.Tasks.length; i++){%>
            <tr>
                <td><%= temp.Tasks[i].name %></td>
                <td><%= temp.Tasks[i].status %></td>
            </tr>
    <% }%>
    </table>
</body>
</html>